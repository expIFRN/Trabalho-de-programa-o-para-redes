import requests

url = input("Digite a URL do site (ex: https://www.exemplo.com): ").strip()

try:
    resposta = requests.get(url)
    
    if resposta.status_code == 200:
        with open("pagina.html", "w", encoding="utf-8") as arquivo:
            arquivo.write(resposta.text)
        print("Conteúdo HTML salvo com sucesso no arquivo 'pagina.html'.")
    else:
        print(f"Erro ao acessar a página. Código de status: {resposta.status_code}")
except requests.exceptions.RequestException as e:
    print(f"Ocorreu um erro ao tentar acessar a página: {e}")
