import socket

HOST = '127.0.0.1'
PORT = 65432

def run_server():
    with socket.socket(socket.AF_INET, socket.SOCK_STREAM) as s:
        s.bind((HOST, PORT))
        s.listen()
        print(f"Servidor TCP escutando em {HOST}:{PORT}...")
        conn, addr = s.accept()
        with conn:
            print(f"Conex√£o recebida de: '{addr[0]}'")

if __name__ == "__main__":
    run_server()
